{
  "name": "omdb-bot",
  "version": "0.7.1",
  "description": "Finds film details on IMDB via the OMDB API.",
  "main": "./src/server.js",
  "scripts": {
    "commit": "npx git-cz",
    "lint": "npx standard",
    "lint:fix": "npx standard --fix",
    "start": "node ./src/server.js --unhandled-rejections=strict",
    "start:dev": "nodemon ./src/server.js --unhandled-rejections=strict",
    "test": "lab -t 100 && npm run lint",
    "test:cov": "lab -r html -o coverage.html",
    "postversion": "git push --all && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kreig303/omdb-bot.git"
  },
  "keywords": [
    "imdb",
    "omdb"
  ],
  "engines": {
    "node": ">=12"
  },
  "author": "2019 Kreig Zimmerman (https://github.com/kreig303)",
  "contributors": [
    "Kreig Zimmerman (https://github.com/kreig303)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kreig303/omdb-bot/issues"
  },
  "homepage": "https://github.com/kreig303/omdb-bot#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@hapi/lab": "21.0.0",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "nodemon": "2.0.2",
    "standard": "14.3.1"
  },
  "maintainers": [
    "Kreig Zimmerman (https://github.com/kreig303)"
  ],
  "dependencies": {
    "@hapi/boom": "8.0.1",
    "@hapi/hapi": "18.4.0",
    "@hapi/joi": "17.0.2",
    "@hapi/wreck": "16.0.1",
    "dotenv": "8.2.0"
  }
}
